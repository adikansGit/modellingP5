# Data source: Swiss Energyscope
# Data source: P.Stadler et al, Contribution of Model Predictive Control in the Integration of Renewable Energy Sources within the Built Environment,2018
# Assumption: interest rate 3%
 
/*---------------------------------------------------------------------------------------------------------------------------------------
Set the electrical and thermal efficiency factors of SOFC
---------------------------------------------------------------------------------------------------------------------------------------*/
param eff_SOFC_el:=0.6;
param eff_SOFC_heat:=0.2;

/*---------------------------------------------------------------------------------------------------------------------------------------
Set the maximum scaling factor of SOFC
---------------------------------------------------------------------------------------------------------------------------------------*/
let  Fmax['SOFC'] := 3000;

/*---------------------------------------------------------------------------------------------------------------------------------------
Set the reference size of ng flow (will be scaled with mult_t) 
---------------------------------------------------------------------------------------------------------------------------------------*/
let Flowout['Electricity','SOFC']:=10;
let Flowin['Natgas','SOFC']:=Flowout['Electricity','SOFC']/eff_SOFC_el;
let Qheatingsupply['SOFC']:=Flowin['Natgas','SOFC']*eff_SOFC_heat;

/*---------------------------------------------------------------------------------------------------------------------------------------
Set the cinv2 of the SOFC  
---------------------------------------------------------------------------------------------------------------------------------------*/
let cinv1["SOFC"]:= 0;
let cinv2["SOFC"]:= 15000;

let Tminheating['SOFC'] := 90;
